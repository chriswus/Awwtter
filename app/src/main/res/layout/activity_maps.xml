<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="mypackage.MapsActivity"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2200ff00"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/gradientmap"/>


        <!--<pl.droidsonroids.gif.GifTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/otter_cups"-->
            <!--/>-->

        <ImageView
            android:id="@+id/energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/energy"
            android:paddingLeft="17dp"
            android:paddingTop="50dp"/>

        <TextView
            android:id="@+id/energy_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/energy"
            android:layout_toStartOf="@id/energy"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/clam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clam"
            android:paddingLeft="17dp"
            android:paddingTop="90dp"/>

        <TextView
            android:id="@+id/clam_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/clam"
            android:layout_toStartOf="@id/clam"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            />

        <ImageButton
            android:id ="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/menu"
            />



    </RelativeLayout>

</LinearLayout>
